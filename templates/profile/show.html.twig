{% extends 'base.html.twig' %}

{% block title %} Présentation des utilisateurs {% endblock %}
{% block body %}
<div class="d-flex justify-content-center">
    <h2 class="page-title">• Profil •</h2>
</div>
<div class="container-fluid">
    <div class="row align-items-center">
        <div class="col-5 d-flex justify-content-center overflow-hidden">
            <img class="profile-picture" src="https://www.fc-photos.com/wp-content/uploads/2016/09/fc-photos-Weynacht-0001.jpg" alt="photo de profil">
        </div>
        <div class="col-7 profile-informations">
            <h3> Prénom Nom </h3>
            <p>Spécilisation: Diététicienne</p>
            <p>8 rue de Paris, 33000 BORDEAUX</p>
            <p>moi@gmail.com</p>
            <p>0102030405</p>
            <p>Site internet : moi@moi.fr</p>
        </div>
    </div>
</div>

<div class="profile-title-space">
    <h3 class="part-title">Fiches postées :</h3>
</div>
<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        {% for i in 1..4 %}
        <div class="col-xl-2 col-4 d-flex card-container justify-content-center">
            <div>
                {% include '/component/_card.html.twig' %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<div class="profile-title-space">
    <h3 class="part-title">Événements organisés :</h3>
</div>
<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        {% for i in 40..43 %}
        <div class="col-xl-2 col-4 d-flex card-container justify-content-center">
            <div>
                <img src="https://picsum.photos/400/200?random={{ i }}" alt='événement organisé'">
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<div class="profile-title-space">
    <h3 class="part-title">Services proposés :</h3>
</div>
<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        {% for j in 50..53 %}
        <div class="col-xl-2 col-4 d-flex card-container justify-content-center">
            <div>
                <img src="https://picsum.photos/400/200?random={{ j }}" alt='événement organisé'">
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}