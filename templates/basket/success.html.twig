{% extends 'base.html.twig' %}

{% block title %}Paiement accepté{% endblock %}

{% block body %}
    <div class="pt-5">
        <h1 class="pt-5">Paiement accepté</h1>

        {% if purchased_resource is not empty %}
            <p>Ci-dessous le lien de téléchargement:</p>
                {% for resourceFile in purchased_resource.resourceFiles %}
                    <a href="/uploads/resources/{{ resourceFile.name }}" target="_blank"><i class="{{ resourceFile.resource.resourceFormat.icon }}"></i></a>
                {% endfor %}
        {% endif %}
    </div>
{% endblock %}
