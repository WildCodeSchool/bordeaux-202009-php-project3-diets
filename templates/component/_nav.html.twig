{% block header %}
    <!--Navbar-->

    <nav class="navbar navbar-expand-md shadow-sm p-3 mb-5 bg-white rounded">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav"
                aria-controls="basicExampleNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"><i class="fas fa-bars"></i></span>
        </button>
        <div class="logo-mobile">
            <div class="logo-mobile-image">
                <img src="{{ asset('build/images/logo.69395845.png') }}" alt="logo" class="logo-design">
            </div>
            <div>
                <a class="navbar-title" href="{{ path('ressource_index') }}">Nous les diets</a>
            </div>
        </div>
        <div>
           <a class="user-mobile" href=""><i class="fas fa-shopping-cart"></i></a>
            {% if app.user %}
                <a class="user-mobile" href="/logout"><i class=" fas fa-user-alt-slash"></i></a>
            {% else %}
                <a class="user-mobile" href="{{ path('app_login') }}"><i class=" fas fa-user"></i></a>
            {% endif %}
        </div>

        <!-- Collapsible content -->
        <div class="collapse navbar-collapse mb-1" id="basicExampleNav">

            <!-- Links -->
            <div class="contain-logo">
                <img src="{{ asset('build/images/logo.69395845.png') }}" alt="logo" class="logo-design">
                <div class="logo-title">
                    <a class="navbar-title" href="{{ path('ressource_index') }}">Nous les diets</a>
                </div>
            </div>
            <div id="nav-color">
                {% if path is defined %}
                    {% if path == 'knowledge_index' %} {{ 1 }}
                        {% elseif path == 'event_index' %} {{ 2 }}
                        {% elseif path == 'service_index' %} {{ 3 }}
                        {% elseif path == 'profile_edit'%} {{ 4 }}
                    {% endif %}
                {% endif %}
            </div>
            <ul class="navbar-nav nav-flex-icons">
                <li class="nav-item">
                    <a class="nav-link" id="nav-1" href="{{ path('knowledge_index') }}">Connaissances</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="nav-2" href="{{ path('event_index') }}">Ev√®nements</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('service_index') }}" id="nav-3" class="nav-link">Services</a>
                </li>
                 {% if app.user %}
                     <li class="nav-item">
                        <a id="nav-4" class="nav-link" href="{{path('profile_edit', {'id': app.user.id})}}">Mon espace</a>
                     </li>
                 {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a id="nav-4" class="nav-link" href="{{path('admin')}}">Page Admin</a>
                    </li>
                {% endif %}
            </ul>
            <ul class="link-footer">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('contact_index') }}">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('propos') }}">A propos</a>
                </li>
            </ul>
            <div>
                <a class="nav-user mr-3" href="{{ path('basket_index') }}"><i class="fas fa-shopping-cart"></i></a>
                {% if app.user %}
                    <a class="nav-user" href="/logout"><i class=" fas fa-user-alt-slash"></i></a>
                {% else %}
                    <a class="nav-user" href="{{ path('app_login') }}"><i class=" fas fa-user"></i></a>
                {% endif %}
            </div>
        </div>
    </nav>

{% endblock %}
