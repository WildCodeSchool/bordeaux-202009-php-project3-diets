{% extends 'base.html.twig' %}

{% block title %}Vous êtes une société/entreprise{% endblock %}

{% block body %}
<div class="company-register pt-5 d-flex flex-column">
    <h2 class="pt-5 pb-4 mt-5 text-center">Finalisez votre inscription en tant que société ou entreprise</h2>
    <div class=" profile-main-forms pt-5 d-flex justify-content-center">
        <div class="form-user w-50">
            {% form_theme form_company 'bootstrap_4_layout.html.twig' %}
            {{ form_start(form_company) }}
                {{ form_row(form_company.name) }}
                {{ form_row(form_company.siret) }}
                {{ form_row(form_company.description) }}
            <button type="submit" class="btn mt-5">Finaliser mon inscription</button>
            {{ form_end(form_company) }}
        </div>
    </div>
</div>
{% endblock %}
