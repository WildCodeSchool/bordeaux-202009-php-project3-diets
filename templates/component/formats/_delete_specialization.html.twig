<form method="post" action="{{ path('admin_delete_specialization', {'id': specialization.id}) }}" onsubmit="return confirm('Es-tu sûre de vouloir supprimer cette spécialisation ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ specialization.id) }}">
    <button class="delete-btn"> <i class="far fa-times-circle fa-2x justify-content-center"></i></button>
</form>
