<div>
    <h3 class="part-title">Je propose un événement :</h3>
</div>
<div class="container-fluid-event">
    <div class="row align-items-center">
        <div class="col-5 d-flex justify-content-center">
            <div>
                <div class="overflow-hidden">
                    <img class="item-picture" src="https://images.unsplash.com/photo-1511688878353-3a2f5be94cd7?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=634&q=80" alt="Ma nouvelle fiche">
                </div>
                <div>
                    <p class="green-string">Modifier</p>
                </div>
            </div>
        </div>
        <div class="col-7 profile-main-forms">
            <div class="form-event">
                {{ form_start(formEvent) }}
                <div class="row">
                    <div class="text-center px-4">Titre</div>
                    <div>{{ form_row(formEvent.name) }}</div>
                </div>
                <div class="row">
                    <div class="text-center px-4">Type d'évènement</div>
                    <div>{{ form_row(formEvent.eventFormat) }}</div>
                </div>
                <div class="row">
                    <div class="text-center px-4">Date de début</div>
                    <div>{{ form_row(formEvent.dateStart) }}</div>
                </div>
                <div class="row">
                    <div class="text-center px-4">Date de fin</div>
                    <div>{{ form_row(formEvent.dateEnd) }}</div>
                </div>
                <div class="row">
                    <div class="text-center px-4">Prix</div>
                    <div>{{ form_row(formEvent.price) }}</div>
                </div>
                <div class="row">
                    <div class="text-center px-4">Lien</div>
                    <div>{{ form_row(formEvent.link) }}</div>
                </div>
                <div class="row">
                    <div class="text-center px-4">Description</div>
                    <div>{{ form_row(formEvent.description) }}</div>
                </div>
                <div class="row">
                    <div class="text-center px-4">registeredEvent</div>
                    <div>{{ form_row(formEvent.registeredEvent) }}</div>
                </div>
                <div>
                    <button class="btn">{{ button_label|default('Valider') }}</button>
                </div>
                {{ form_end(formEvent) }}
            </div>
        </div>
    </div>
</div>
