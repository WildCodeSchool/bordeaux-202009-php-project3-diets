{% extends 'base.html.twig' %}

{% block title %}Editer une ressource{% endblock %}

{% block body %}

<div class="container-fluid-resource-edit">
    <div class="row align-items-center justify-content-center">
        <div class="col-5 d-flex justify-content-center">
            <div>
                <div class="overflow-hidden">
                    {% if resource.resourceFiles is empty %}
                        <div></div>
                    {% else %}
                        {% for resourceFile in resource.resourceFiles %}
                        <a href="/uploads/resources/{{ resourceFile.name }}" target="_blank"><i class="{{ resource.resourceFormat.icon }}"></i></a>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-7 profile-main-forms ">
            <div class="form-service">
                {% form_theme form 'bootstrap_4_layout.html.twig' %}
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                <button type="submit" class="btn mt-5">Editer cette connaissance</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}
