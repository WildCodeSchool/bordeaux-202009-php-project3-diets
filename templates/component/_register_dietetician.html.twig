{% extends 'base.html.twig' %}

{% block title %}Vous êtes diététicien(ne){% endblock %}

{% block body %}
    <div class="company-register pt-5 d-flex flex-column">
        <h2 class="pt-5 pb-4 mt-5 text-center">Finalisez votre inscription en tant que diététicien(ne)</h2>
        <div class=" profile-main-forms pt-5 d-flex justify-content-center">
            <div class="form-user w-50">
                {% form_theme form_dietetician 'bootstrap_4_layout.html.twig' %}
                    {{ form_start(form_dietetician) }}
                    {{ form_row(form_dietetician.firstname) }}
                    {{ form_row(form_dietetician.lastname) }}
                    {{ form_row(form_dietetician.birthday) }}
                    {{ form_row(form_dietetician.adeli) }}
                    {{ form_row(form_dietetician.specializations) }}
                <div class="form-modal-event">
                    <button type="button" class="btn" data-toggle="modal" data-target="#modalEvent">
                        Je n'ai pas de numéro ADELI
                    </button>
                    <div class="modal fade" id="modalEvent" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-body text-center">
                                    Vous pouvez tout de même vous inscrire sur le site Nous Les Diets.
                                    Pour cela, il vous suffit de contacter <a href="{{ path('contact_index') }}">alexandra.jacob.diet@gmail.com</a>.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                    <button type="submit" class="btn mt-5">Finaliser mon inscription</button>
                {{ form_end(form_dietetician) }}
            </div>
        </div>
    </div>
{% endblock %}
