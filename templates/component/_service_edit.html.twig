<div>
    <h3 class="part-title">Mes fiches :</h3>
</div>
<div class="d-flex flex-wrap justify-content-center">
    {% for resource in resources %}
        <div class="card-container justify-content-center">
            <div>
                {% include '/component/_card.html.twig' %}
            </div>
        </div>
    {% endfor %}
</div>

<div>
    <h3 class="part-title">Mes événements :</h3>
</div>
<div class="d-flex flex-wrap justify-content-center">
    {% for registered_event in registered_events %}
        <div class="card-container justify-content-center">
            <div class="overflow-hidden">
                <a href="{{ registered_event.event.link }}" target="_blank">
                    <img src="{{ registered_event.event.picture.link }}" alt='événement organisé'>
                </a>
            </div>
        </div>
    {% endfor %}
</div>

<div>
    <h3 class="part-title">Mes services :</h3>
</div>
<div class="d-flex flex-wrap justify-content-center">
    {% for service in services %}
        <div class="card-container justify-content-center">
            <a href="{{ service.link }}" target="_blank">
                <img src="{{ service.picture.link }}" alt='service proposé'>
            </a>
        </div>
    {% endfor %}
</div>
