<div>
    <h3 class="part-title">Mes connaissances :</h3>
</div>
<div class="d-flex flex-wrap justify-content-center">
    {% for resource in resources %}
        {% include 'component/ressource/_ressource_informations.html.twig' %}
        <div class="card-container justify-content-center">
            <div>
                {% include '/component/_card.html.twig' %}
            </div>
        </div>
    {% endfor %}
</div>

<div>
    <h3 class="part-title">Mes événements :</h3>
</div>
<div class="d-flex flex-wrap justify-content-center">
    {% for event_organized in events_organized %}
        <div class="card-container justify-content-center">
            <div class="overflow-hidden mb-3">
                <a href="{{ event_organized.event.link }}" target="_blank">
                      {% for picture in pictures %}
                        {% if event_organized.event.picture.id is same as (picture.id) %}
                            <img class="picture-event" src="/uploads/pictures/{{ picture.name }}" alt='Picture évènement proposé'>
                        {% endif %}
                      {% endfor %}
                </a>
            </div>
            {# <div class="text-center">{% include '/component/event/_participants.html.twig' %}</div> #}
        </div>
    {% endfor %}
</div>

<div>
    <h3 class="part-title">Mes services :</h3>
</div>
<div class="d-flex flex-wrap justify-content-center">
    {% for service in services %}
        <div class="card-container justify-content-center">
            <a href="{{ service.link }}" target="_blank">
                {% for picture in pictures %}
                    {% if service.picture.id is same as (picture.id) %}
                        <img class="picture-event" src="/uploads/pictures/{{ picture.name }}" alt='Picture service proposé'>
                    {% endif %}
                {% endfor %}
            </a>
        </div>
    {% endfor %}
</div>
