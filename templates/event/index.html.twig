{% extends 'base.html.twig' %}

{% block title %}Evenements{% endblock %}

{% block body %}
<div class="event">
    <div class="d-flex justify-content-center">
        <h2 class="page-title">Evènements</h2>
    </div>
    <div class="d-flex justify-content-center align-items-center flex-wrap mb-5">
        <div>Je propose :</div>
        <div class="profile-button-container d-flex flex-wrap justify-content-center">
            <div class="profile-button">
                <a href="#nouvel-evenement">un évènement</a>
            </div>
        </div>
    </div>
    <div class="search">
            {{ form_start(form) }}
                {{ form_widget(form) }}
        <button type="submit" class="search-button home-btn-main">Rechercher</button>
            {{ form_end(form) }}
    </div>
    {% if eventsSearch %}
        {% for event in eventsSearch %}
            <div class="row container-img-txt">
                <div class="col-lg-4">
                    <div class="img-container">
                        <img src="https://picsum.photos/400/300?random {{ event.id }}" alt='Picture event'>
                    </div>
                </div>
                <div class="col-lg-3 text-container">
                    <p>Titre: {{ event.name }} </p>
                    <p>lien: {{ event.link }}</p>
                    <p>Date de début:{{ event.dateStart|date("d/m/Y H:i") }}</p>
                    <p>Date de fin : {{ event.dateEnd|date("d/m/Y H:i") }}</p>
                    <p>Description:{{ event.description }}</p>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="calendrier-form">
            <div class="dates">
                <h3>Dates</h3>
                {% for event in events %}
                    <ul>
                        <li>{{ event.dateStart|date("d/m/Y H:i") }}</li>
                        <p>{{ event.name }}</p>
                    </ul>
                {% endfor %}
            </div>
        </div>
        <div class="container-fluid">
            <div>
                <div class="col justify-content-end bloc-img">
                    <div class="row justify-content-center"><h3>Tri des évènements</h3>
                        {% for event in events %}
                            <div class="row container-img-txt">
                                <div class="col-lg-4">
                                    <div class="img-container">
                                        {% for picture in pictures %}
                                            {% if event.picture.id is same as (picture.id) %}
                                                <img class="picture-event" src="/uploads/pictures/{{ picture.name }}" alt='Picture event'>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="col-lg-3 text-container">
                                    <p>Titre: {{ event.name }} </p>
                                    <p>lien: {{ event.link }}</p>
                                    <p>Date de début:{{ event.dateStart|date("d/m/Y H:i") }}</p>
                                    <p>Date de fin : {{ event.dateEnd|date("d/m/Y H:i") }}</p>
                                    <p>Description:{{ event.description }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

