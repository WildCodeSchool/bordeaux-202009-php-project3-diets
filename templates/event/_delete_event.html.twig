<form method="post" action="{{ path('event_delete', {'id': event.id}) }}" onsubmit="return confirm('Es-tu sûr(e) de vouloir supprimer cet évènement ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
    <button class="delete-btn"><i class="far fa-times-circle fa-2x justify-content-center"></i></button>
</form>
