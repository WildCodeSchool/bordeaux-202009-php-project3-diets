{% extends 'base.html.twig' %}

{% block title %}
    Détail de la connaissance
{% endblock %}

{% block body %}
    <div class="knowledge-full-screen ">
    <div class="knowledge-page">
    <div class="d-flex justify-content-center search-bar">
        <h2 class="pb-5">Connaissances</h2>
    </div>
        <div class="search">
            {% form_theme formSearch 'bootstrap_4_layout.html.twig' %}
            {{ form_start(formSearch) }}
            <div class="d-flex flex-column">
                <div class="d-flex">
                    {{ form_row(formSearch.search) }}
                    <button type="submit" class="buttons-search-bar search-button home-btn-main">Rechercher</button>
                </div>
                <div class="d-flex justify-content-start">
                    {{ form_row(formSearch.format) }}
                    {{ form_row(formSearch.pathology) }}
                </div>
            </div>
            <div class="search-all-form-container">
                {{ form_end(formSearch) }}
                {{ form_start(form_search_all) }}
                {{ form_widget(form_search_all) }}
                <button type="submit" class="buttons-search-bar search-button home-btn-main">Tout voir</button>
                {{ form_end(form_search_all) }}
            </div>
        </div>
         {% if app.user %}
            <div class="profile-button-container d-flex flex-wrap justify-content-center ml-2">
                <div class="form-modal">
                    <button type="button" class="knowledge-button" data-toggle="modal" data-target="#exampleModalCenter">
                        Créer une connaissance
                    </button>
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-body">
                                    {% include '/component/_newfiche_edit.html.twig' %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
    {% if resourcesSearch is empty %}
    <h3 class="text-center"> Aucun résultat ne correspond malheureusement à votre recherche...</h3>
    {% elseif resourcesSearch != last %}
    <div class="d-flex flex-wrap justify-content-center">
        {% for resource in resourcesSearch %}
        <div class="container-fluid">
            <div class="row d-flex justify-content-center pb-3 pt-3">
                <div class="col-5 pb-4">
                    <div class="pb-2">
                        <h3 class="pb-1 knowledge-title">{{ resource.name }}</h3>
                    </div>
                    <div>
                        <div class="pb-1">
                            dernière mise à jour : {{ resource.updatedAt|date("d/m/Y") }}
                        </div>
                        {% if is_granted('ROLE_CONTRIBUTOR') %}
                        <div class="mt-4">
                            Document : <a class="knowledge-link" href="{{ resource.link }}" target="_blank">Lien externe vers la ressource</a>
                        </div>
                        {% endif %} #}
                    </div>
                    <div class="row d-flex justify-content-center pt-3 pb-3">
                        <div class="pl-3">Description :</div>
                        <p class="col">
                            {{ resource.description }}
                        </p>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('profile_resource_edit', {'id': resource.id}) }}">Editer</a>
                    {% endif %}
                </div>
                <a href="/uploads/resources/{{ resource.fileName }}" target="_blank"><i class="{{ resource.resourceFormat.icon }}"></i></a>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row d-flex justify-content-center">
                <div class="border-bottom col-md-8">
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="d-flex flex-wrap justify-content-center">
        {%  for resource in resourcesLastUpdate  %}
            <div class="container-fluid">
                <div class="row d-flex justify-content-center pb-3 pt-3">
                    <div class="col-5 pb-4">
                        <div class="pb-2">
                            <h3 class="pb-1 knowledge-title">{{ resource.name }}</h3>
                        </div>
                        <div>
                            <div class="pb-1">
                                dernière mise à jour : {{ resource.updatedAt|date("d/m/Y") }}
                            </div>
                            {% if is_granted('ROLE_CONTRIBUTOR') %}
                                <div class="mt-4">
                                    Document : <a class="knowledge-link" href="{{ resource.link }}" target="_blank">Lien externe vers la ressource</a>
                                </div>
                            {% endif %}
                        </div>
                        <div class="row d-flex justify-content-center pt-3 pb-3">
                            <div class="pl-3">Description :</div>
                            <p class="col">
                                {{ resource.description }}
                            </p>
                        </div>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('profile_resource_edit', {'id': resource.id}) }}">Editer</a>
                        {% endif %}
                    </div>
                    <a href="/uploads/resources/{{ resource.fileName }}" target="_blank"><i class="{{ resource.resourceFormat.icon }}"></i></a>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row d-flex justify-content-center">
                    <div class="border-bottom col-md-8">
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {% endif %}
    </div>
{% endblock %}
