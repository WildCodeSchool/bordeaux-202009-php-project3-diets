{% extends 'home.html.twig' %}

{% block title %}
    Bienvenue
{% endblock %}

{% block body_home %}
    <div class="vh-100 vw-100 home-full-screen">
        <div class="home-page container-fluid container-table">
            <div class="vertical-center-row">
                <div class="card col-6 m-auto card-radius">
                    <div>
                        <div class="position-absolute close mt-2">
                            <a href="{{ path('home') }}"><i class="fas fa-times-circle close"></i></a>
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="text-center p-1 card-title home-form-title">Je m'inscris :</div>
                        </div>
                    </div>
                    <div>
                    {% for flashError in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}
                    {{ form_start(registration_form) }}
                   {#  <div class="justify-content-center align-items-center container home-email">
                        <div class="col-3 align-items-center home-form">Prénom :</div>
                        <div class="col-5">
                            {{ form_row(registration_form.firstname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="justify-content-center align-items-center container home-email">
                        <div class="col-3 align-items-center home-form">Nom :</div>
                        <div class="col-5">
                            {{ form_row(registration_form.lastname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>#}
                    <div class="justify-content-center align-items-center container home-email">
                        <div class="col-3 align-items-center home-form">Adresse e-mail :</div>
                        <div class="col-5">
                            {{ form_row(registration_form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="justify-content-center align-items-center container home-email">
                        <div class="col-3 align-items-center home-form">Mot de passe :</div>
                        <div class="col-5">
                            {{ form_row(registration_form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="d-flex justify-content-center align-items-center container home-email my-4">
                        <div class="col-5 align-items-center home-form home-attestation">
                            J'accepte les conditions d'utilisation  et j'atteste être diététicien(ne) :
                        </div>
                        <div class="col-1">
                            {{ form_row(registration_form.agreeTerms, {'attr': {'class': 'form-agree'}}) }}
                        </div>
                    </div>
                    <div class="d-flex justify-content-center align-items-center container home-email">
                       <div class="home-form-lg">
                           <button type="submit" class="home-btn-second non_underline text-center">S'inscrire</button>
                        </div>
                    </div>
                        {{ form_end(registration_form) }}
                </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


