{% extends 'home.html.twig' %}

{% block title %}
    Bienvenue
{% endblock %}

{% block body_home %}
    <div class="vh-100 vw-100 home-full-screen">
        <div class="home-page container-fluid container-table">
            <div class="vertical-center-row">
                <div class="card col-6 m-auto card-radius">
                    <div>
                        <div class="position-absolute close mt-2">
                            <a href="{{ path('home') }}"><i class="fas fa-times-circle close"></i></a>
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="text-center pt-1 card-title home-form-title">Je me connecte :</div>
                        </div>
                    </div>
                    <div>
                    <form method="post">
                        <div>
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                        </div>
                        <div class="justify-content-center">
                            {% if app.user %}
                            <div class="d-flex justify-content-center mb-3">
                                Vous êtes connecté•ée en tant que {{ app.user.username }}  <a href="{{ path('app_logout') }}" class="underline">.   Se déconnecter ?</a>
                            </div>
                            {% endif %}
                            <div class="justify-content-center align-items-center container home-email">
                                <div class="col-3 align-items-center">
                                    <label for="inputEmail" class="text-center home-form">Adresse e-mail :</label>
                                </div>
                                <div class="col-5">
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                                </div>
                            </div>
                        </div>
                        <div class="justify-content-center align-items-center container home-password">
                            <div class="col-3 align-items-center">
                                <label for="inputPassword" class="text-center home-form">Mot de passe :</label>
                            </div>
                            <div class="col-5">
                                <input type="password" name="password" id="inputPassword" class="form-control" required>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}">
                        </div>
                        {#  <div class="d-flex forgot justify-content-center mt-3">
                            <a href="{{ path('app_forgot_password_request') }}" class="underline no-registered">Mot de passe oublié</a>
                        </div> #}
                        <div class="d-flex justify-content-around pt-3">
                            <div class="d-flex align-items-center">
                                <a href="{{ path('app_register') }}" class="underline home-form no-registered">Je ne suis pas encore inscrit</a>
                            </div>
                            <div class="home-form-lg justify-content-end">
                                <button type="submit" class="home-btn-second non_underline text-center" >Valider</button>
                            </div>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
