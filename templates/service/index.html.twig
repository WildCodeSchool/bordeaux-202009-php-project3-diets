{% extends 'base.html.twig' %}

{% block title %} Services {% endblock %}
{% block body %}
    <div>
        <div class="d-flex justify-content-center">
            <h2 class="page-title">Service</h2>
        </div>
        {% if app.user %}
            <div class="d-flex justify-content-center align-items-center flex-wrap mb-5">
                <div>Je propose :</div>
                <div class="profile-button-container d-flex flex-wrap justify-content-center">
                    <div class="profile-button">
                        <a href="#nouveau-service">un service</a>
                    </div>
                </div>
            </div>
        {% endif %}
        <div>
            <h3 class="part-title">Services Propos√©s :</h3>
        </div>
        <div class="">
            <div class="row justify-content-start">
                {% for service in services %}
                    <div class="col-lg-2">
                    </div>
                    <div class="col-lg-4">
                        <div class="img-container">
                            <img src="https://picsum.photos/400/200?random={{ service.id }}" alt='Picture service'>
                        </div>
                    </div>
                    <div class="col-lg-5 text-container">
                        <p>Titre: {{ service.name }}</p>
                        <p>Prix: {{ service.price }}</p>
                        <p>Lien: {{ service.link }}</p>
                        <p>Inscription</p>
                        <p>Description:{{ service.description }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% if app.user %}
            <div>
                {% include '/component/_newservice_edit.html.twig' %}
            </div>
        {% endif %}
    </div>


{% endblock %}
