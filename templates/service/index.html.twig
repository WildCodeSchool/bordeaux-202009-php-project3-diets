{% extends 'base.html.twig' %}

{% block title %} Services {% endblock %}
{% block body %}
    <div>
        <div class="d-flex justify-content-center">
            <h2 class="page-title">Service</h2>
        </div>
        <div class="search">
            {{ form_start(formSearch) }}
            {{ form_widget(formSearch) }}
            <button type="submit" class="search-button home-btn-main">Rechercher</button>
            {{ form_end(formSearch) }}
        </div>
        {% if app.user %}
            <div class="d-flex justify-content-center align-items-center flex-wrap mb-5">
                <div>Je propose :</div>
                <div class="profile-button-container d-flex flex-wrap justify-content-center">
                    <div class="profile-button">
                        <a href="#nouveau-service">un service</a>
                    </div>
                </div>
            </div>
        {% endif %}
        <div>
            <h3 class="part-title">Services Propos√©s :</h3>
        </div>
        <div class="">
            <div class="row justify-content-start">
                {% if servicesSearch %}
                {% for service in servicesSearch %}
                    <div class="col-lg-2">
                    </div>
                    <div class="col-lg-4">
                        <div class="img-container">
                            {% for picture in pictures %}
                                {% if service.picture.id is same as (picture.id) %}
                                    <img class="picture-event" src="/uploads/pictures/{{ picture.name }}" alt='Picture service'>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-lg-5 text-container">
                        <p>Titre: {{ service.name }}</p>
                        <p>Prix: {{ service.price }}</p>
                        {% if is_granted("ROLE_CONTRIBUTOR") %}<p>Lien: {{ service.link }}</p>{% endif %}
                        {% if is_granted("ROLE_CONTRIBUTOR") %}<p>Inscription</p>{% endif %}
                        <p>Description:{{ service.description }}</p>
                    </div>
                {% endfor %}
                {% else %}
                {% for service in services %}
                    <div class="col-lg-2">
                    </div>
                    <div class="col-lg-4">
                        <div class="img-container">
                            {% for picture in pictures %}
                                {% if service.picture.id is same as (picture.id) %}
                                    <img class="picture-event" src="/uploads/pictures/{{ picture.name }}" alt='Picture event'>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-lg-5 text-container">
                        <p>Titre: {{ service.name }}</p>
                        <p>Prix: {{ service.price }}</p>
                        {% if is_granted("ROLE_CONTRIBUTOR") %}<p>Lien: {{ service.link }}</p>{% endif %}
                        {% if is_granted("ROLE_CONTRIBUTOR") %}<p>Inscription</p>{% endif %}
                        <p>Description:{{ service.description }}</p>
                    </div>
                {% endfor %}
                {% endif %}
            </div>
        </div>
        {% if app.user %}
            <div>
                {% include '/component/_newservice_edit.html.twig' %}
            </div>
        {% endif %}
    </div>

{% endblock %}
