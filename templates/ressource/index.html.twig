{% extends 'base.html.twig' %}

{% block title %}
    Liste des connaissances
{% endblock %}

{% block body %}
    <div class="firstdiv">
        <div class="cadre-title">
            Bienvenue sur Nous les Diets !!! </br><p class="plateform"> Plateforme de partage de connaissances  </br> entre diététiciens.</p>
            <button class="btn-cadre">
                <a href="#ressource-event"> <i class="fas fa-1x fa-arrow-circle-down"></i></a>
            </button>
        </div>
        </div>
        {% if resourcesSearch is empty %}
            <h3 class="text-center"> Aucun résultat ne correspond malheureusement à votre recherche...</h3>
        {% elseif resourcesSearch != last %}
            <div class="d-flex flex-wrap justify-content-center">
                {% for resource in resourcesSearch %}
                    {% include 'component/ressource/_ressource_informations.html.twig' %}
                    <div class="card-container justify-content-center">
                        <div class="test-card">
                            {% include '/component/_card.html.twig' %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
    </div>
    <div class="d-flex justify-content-center next-event">
        {% for event in events%}
            <div>
                <h3 class="font-weight-bold" id="ressource-event">Notre prochain événement est :</h3>
            </div>
            <div>
                <h4 class="m-4 text-center"><span class="font-weight-bold">{{ event.dateStart|date("d/m/Y H:i") }} - {{ event.name }}</span>  - <span class="font-italic">{{ event.description }}</span></h4>
            </div>
        {% endfor %}
    </div>
    <h3 class="font-weight-bold d-flex justify-content-center mt-4" >Les dernières connaissances</h3></br>
    <div class="d-flex flex-wrap justify-content-center">

        {%  for resource in resourcesLastUpdate  %}
            {% include 'component/ressource/_ressource_informations.html.twig' %}
            <div class="card-container justify-content-center">
                <div class="test-card">
                    {% include '/component/_card.html.twig' %}
                </div>
            </div>
        {% endfor %}
    </div>
    {% endif %}
{% endblock %}
