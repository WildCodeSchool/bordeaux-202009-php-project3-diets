{% extends 'base.html.twig' %}

{% block title %}
    Liste des connaissances
{% endblock %}

{% block body %}
    <div class="firstdiv">
        <div class="d-flex justify-content-center search-bar">
            <h2>Barre de recherche à développer</h2>
        </div>
        {% include '/component/_carousel.html.twig' %}
    </div>
    <div class="d-flex justify-content-center next-event">
        {% for event in events%}
            <div>
                <h2>Notre prochain événement est :</h2>
            </div>
            <div>
                <h2>{{ event.name }} - {{ event.description }}</h2>
            </div>
        {% endfor %}
    </div>
    <div class="d-flex flex-wrap justify-content-center">
        {%  for resource in resourcesLastUpdate  %}
            <div class="card-container justify-content-center">
                <div class="test-card">

                    {% include '/component/_card.html.twig' %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
