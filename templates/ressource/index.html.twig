{% extends 'base.html.twig' %}

{% block title %}
    Liste des connaissances
{% endblock %}

{% block body %}
    <div class="firstdiv">
        <div class="search">
            {{ form_start(formSearch) }}
            {{ form_widget(formSearch) }}
            <button type="submit" class="search-button home-btn-main">Rechercher</button>
            {{ form_end(formSearch) }}
        </div>

        {% if resourcesSearch %}
            <div class="d-flex flex-wrap justify-content-center">
            {% for resource in resourcesSearch %}
                        <div class="card-container justify-content-center">
                            <div class="test-card">
                                {% include '/component/_card.html.twig' %}
                            </div>
                        </div>


            {% endfor %}
            </div>
        {% else %}
    </div>
    <div class="d-flex justify-content-center next-event">
        {% for event in events%}
            <div>
                <h3 class="font-weight-bold">Notre prochain événement est :</h3>
            </div>
            <div>
                <h4 class="m-4 text-center"><span class="font-weight-bold">{{ event.name }}</span>  - <span class="font-italic">{{ event.description }}</span></h4>
            </div>
        {% endfor %}
    </div>
    <div class="d-flex flex-wrap justify-content-center">
        {%  for resource in resourcesLastUpdate  %}
            {% include 'component/ressource/_ressource_informations.html.twig' %}
            <div class="card-container justify-content-center">
                <div class="test-card">
                    {% include '/component/_card.html.twig' %}
                </div>
            </div>
        {% endfor %}
    </div>
    {% endif %}
{% endblock %}
