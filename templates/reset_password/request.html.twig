{% extends 'home.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body_home %}
    <div class="vh-100 vw-100 home-full-screen">
        <div class="home-page container-fluid container-table">
            <div class="row vertical-center-row">
                <div class="card col-6 m-auto card-radius">
                    <div>
                        <div class="-align-right mt-2">
                            <div class="close">
                                <a href="{{ path('home') }}"><i class="fas fa-times-circle fa-2x"></i></a>
                            </div>

                        </div>

                        <div class="row justify-content-center">
                            <div class="text-center p-1 card-title home-form-title">Modifier votre mot de passe</div>
                        </div>
                    </div>
                    {% for flashError in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}

                    {{ form_start(requestForm) }}

                    <div class="row">
                        <div class="text-center px-4 home-form">Adresse e-mail :</div>
                        <div class="subscribe">{{ form_row(requestForm.email) }}</div>
                    </div>

                    <div>
                        <small>
                            Entrez votre adresse email et nous vous enverrons un nouveau mot de passe
                        </small>
                    </div>
                    <div class="row pt-3">
                        <div class="col-4 text-center p-1 home-form-lg">
                    <button class="home-btn-second non_underline">Changer mon mot de passe </button>
                    {{ form_end(requestForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
